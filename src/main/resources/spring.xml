<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="app" class="com.petproject.mono.App"/>

    <bean id="user" class="com.petproject.mono.beans.User">
        <constructor-arg index="0" value="1"/>
        <constructor-arg index="1" value="Java Developer"/>
        <constructor-arg index="2" value="25"/>
    </bean>

    <bean id="message" class="com.petproject.mono.beans.Message">

    </bean>

</beans>